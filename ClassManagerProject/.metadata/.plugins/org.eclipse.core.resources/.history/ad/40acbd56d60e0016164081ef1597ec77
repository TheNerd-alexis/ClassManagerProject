package MBTI;

import java.util.Scanner;

public class IE {

	int i;
	int e;
	
	int button;
	
	Scanner scan = new Scanner(System.in);
	
	
	IE(){
		System.out.println("당신은 혼자 있을 때 ");
		System.out.println("1. 에너지가 회복된다 ");
		System.out.println("2. 외롭다. ");
		
		button = scan.nextInt();
		
		while(true){
		if(button == 1)
			i++;
			else if(button == 2)
				e++;
			else
				System.out.println("다시 선택하세요 ");
		IE ie = new IE();
		}
		
	}
	
	
}
